#!/bin/bash
# - when
# - files

: "${when:=post_test}"

. $LKP_SRC/lib/wait.sh
setup_wait

if [ "$when" = "post_test" ]; then
	wait_post_test
fi

for file in $* $files; do
	base=$(basename $file)
	for prefix in / /proc /sys /sys/kernel/debug; do
		path=$prefix/$file
		if [ -f $path ]; then
			cat $path > $TMP_RESULT_ROOT/$base
			break;
		fi
	done
done
