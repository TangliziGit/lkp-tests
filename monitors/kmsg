#!/bin/bash

. $LKP_SRC/lib/env.sh

# randconfig kernels may not have CONFIG_NET --
# serial console has better availability.
is_virt && [ -z "$LKP_LOCAL_RUN" ] && exec > /dev/ttyS1

[ -f /.dockerenv ] && exit 0

if dmesg --help 2>&1 | grep -q -- --follow; then
	exec dmesg --follow --decode
else
	exec cat /proc/kmsg
fi
