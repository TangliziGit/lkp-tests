pkgname=f2fs-tools-git
_gitname=f2fs-tools
pkgver=1.7.0
pkgrel=1
pkgdesc="Tools for Flash-Friendly File System (F2FS) (git version)"
arch=('i386' 'x86_64')
url="http://sourceforge.net/projects/f2fs-tools/"
license=('GPL')
depends=('')
provides=('f2fs-tools')
conflicts=('f2fs-tools')
makedepends_debian_11=(uuid-dev libselinux1-dev)
source=("https://git.kernel.org/pub/scm/linux/kernel/git/jaegeuk/f2fs-tools.git")
md5sums=('SKIP')

build() {
  cd $_gitname
  ./autogen.sh
  ./configure --prefix=/usr --sbindir=/usr/bin
  make
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir" sbindir=/usr/bin install
}

